#!/bin/bash
clear
source color.dat
count=${1}
if [[ ! $count > 2 ]];then
  source app_choice.sh
fi
if [[ ! -f /volume2/dockerdev/utils/path/$1 ]]; then
  mypath="$HOME/bin/"
else
  mypath="/volume2/docker/utils/path/"
fi
echo
printf "${RED}"
echo "mypath = $mypath"
echo
printf "${BLUE4}"
ts=$(ts.sh)
echo "sudo cp $mypath$1 AutoBackup-$1-$ts"
sudo cp $mypath$1 AutoBackup-$1-$ts
echo
echo backup AutoBackup-$1-$ts
echo
rclone move . snas:backup/docker/auto_backup --include="AutoBackup-$1-$ts" --max-depth 3 -P -v --skip-links
echo
printf "${BLUE2}"
echo "nano $mypath$1"
printf "${BLUE4}"
nano $mypath$1
echo
printf "${BLUE2}"
echo "rclone copy ~/bin snas:docker/utils/binfiles --update -P -v"
rclone copy ~/bin snas:docker/utils/binfiles --update -P -v
printf "${RED}"
if [[ ! -f /volume2/docker/utils/path/$1 ]]; then
  echo DONE
else
  echo "sudo mv $mympath$1 ~/bin/  ? (y/n)"
  printf "${BLUE2}"
  read -n 1 myp
  if [[ $myp = *"y"* ]]; then
    sudo mv $mypath$1 ~/bin/ 
    echo
    ls ~/bin/
    echo
    echo DONE
  fi
fi
cd ~
echo
echo rclone copy
printf "${BLUE2}"
rclone_copy.sh
echo
printf "${NC}"


